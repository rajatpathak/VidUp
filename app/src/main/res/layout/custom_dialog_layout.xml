<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Recent Video "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

 <TextView
        android:layout_gravity="center"
     android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your video is ready, press upload \n to send..."
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/ic_action_upload"
            android:tint="@color/white"
            android:padding="4dp"
            android:id="@+id/dialogButtonUpload"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="#2ab599"
            android:gravity="center"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <TextView
            android:id="@+id/dialogButtonCancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="#d71616"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="18sp"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <ImageView
            android:id="@+id/dialogButtonPlay"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="#2ab599"
            android:tint="@color/white"
            android:src="@drawable/playvid"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>